<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>ehcache2-shaded</artifactId>
    <groupId>no.nav.arbeid.pam</groupId>
    <version>1.0.0</version>
    <packaging>jar</packaging>
    <name>ehcache2-shaded</name>
    <description>Ehcache2 pakket med maven-shade-plugin slik at man ogs√• kan bruke ehcache 3 i samme prosjekt</description>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>

                        <configuration>
                            <relocations>
                                <relocation>
                                    <pattern>org.terracotta</pattern>
                                    <shadedPattern>org.ehcache2.terracotta</shadedPattern>
                                </relocation>
                            </relocations>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                </filter>
                            </filters>

                            <artifactSet>
                                <excludes>
                                    <exclude>org.apache.logging.log4j:log4j-api:jar:</exclude>
                                </excludes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>net.sf.ehcache</groupId>
            <artifactId>ehcache</artifactId>
            <version>2.10.6</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
        <scm>
                <connection>scm:git:https://github.com/navikt/ehcache2-shaded.git</connection>
                <developerConnection>scm:git:https://github.com/navikt/ehcache2-shaded.git</developerConnection
>
                <tag>HEAD</tag>
        </scm>

        <repositories>
                <repository>
                        <id>repo.adeo.no</id>
                        <name>Maven repo i iApp-sonen</name>
                        <url>https://repo.adeo.no/repository</url>
                </repository>
                <repository>
                        <id>palantir</id>
                        <name>Repo for palantir</name>
                        <url>https://dl.bintray.com/palantir/releases</url>
                </repository>
                <repository>
                        <id>confluent</id>
                        <name>Maven repo i iApp-sonen (confluent)</name>
                        <url>https://repo.adeo.no/repository/confluent.io</url>
                </repository>
        </repositories>

        <distributionManagement>
                <repository>
                        <id>m2internal</id>
                        <name>NAV Maven2 Internal Repository</name>
                        <url>https://repo.adeo.no/repository/maven-releases/</url>
                </repository>
                <snapshotRepository>
                        <id>m2snapshot</id>
                        <name>NAV Maven2 Snapshot Repository</name>
                        <url>https://repo.adeo.no/repository/maven-snapshots/</url>
                        <uniqueVersion>false</uniqueVersion>
                </snapshotRepository>
        </distributionManagement>

</project>


